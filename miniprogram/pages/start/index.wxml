<view class="page">
    <view class="top" style="position:fixed;top:0;z-index:6;width:100%;height:10%;background:#ff5c5d;">
        <view class="topText" style="top:{{topText}}px;height:{{topTextSize}}px">
            <text>叮咚党建</text>
        </view>
    </view>
    <view class="box">
        <text>欢迎使用叮咚党建</text>
        <text style="font-size: 180%;">您的入党发展流程百科全书</text>
        <view class="logo">
            <image src="../../picture/backIMG.png" mode="aspectFill"></image>
        </view>
    </view>
    <view style="position: absolute; top: 50%;">
        <image src="../../picture/start.jpg" mode="aspectFit" ></image>
    </view>
    <view class="time" bindtap="toHome">跳过 {{countDownNum}}</view>
    <view class="cardBot" bindtap="toStage">查看入党流程</view>
</view>


