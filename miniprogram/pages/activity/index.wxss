/* pages/activity/index.wxss */
page{
  background-color: white;
}
.TOP {
  position: fixed;
  z-index: 999;
  top: 0;
  width: 100%;
  height: auto;
}

.toptop {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  font-size: 150%;
  color: white;
  word-spacing: -5rpx;
}


.tabs{
  /* border-top: 1rpx solid orangered; */
  width:100%;
  background-color:white;
  margin-top:10rpx;
  margin-bottom: 20rpx;
}
.tabs_container{
  margin:5rpx 10rpx;
  border:5rpx solid #E9837F;
  /* border-radius: 20rpx; */
  height:60rpx;
  display: flex;
}
.tabs_item{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.active{
  color:white;
  background-color: #E9837F;
  /* border-bottom: 5rpx solid currentColor; */
}


.list {
  width: 100%;
  height: 220rpx;
  background: #fff;
}

.item-whole {
  height: 100%;
  margin: 10rpx 10rpx;
  border:1rpx solid #ff5c5d;
  border-radius: 15rpx;
}

.list-item {
  text-align: center;
  padding: 5px;
  float: left;
}

.list-item-left {
  width: 35%;
}

.list-item-right {
  width: 20%;
  font-size: 40rpx;
  color: salmon;
  font-weight: bold;
  line-height: 40rpx;
}

.list-item-tag {
  font-size: 25rpx;
  color: white;
  border: 0rpx solid #ff5c5d;
  border-radius: 15rpx;
  background-color: #ff5c5d;
  margin-top: 45rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list-item-middle {
  width: 45%;
  font-size: 30rpx;
  text-align: left;
}

.branch {
  font-size: 25rpx;
  margin-top: 15rpx;
  color: #ff5c5d;
  min-height: 40rpx;
}

.time {
  font-size: 25rpx;
  margin-top: 30rpx
}

.time-item {
  display: flex;
  height: 40rpx;
  flex-direction: row;
  align-items: center;
  padding-bottom: 20rpx;
}

.time-item image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 5rpx;
}

.f30 {
  font-size: 30rpx;
}

.f-bold {
  font-weight: bold;
}

.f-black {
  color: black;
}

.f-gray {
  color: gray;
}

.activityName{
  min-height: 40rpx;
}