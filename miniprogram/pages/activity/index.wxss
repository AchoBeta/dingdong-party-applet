/* pages/activity/index.wxss */
page{
  background-color: white;
  /* height: 100%; */
}
.TOP {
  position: fixed;
  z-index: 500;
  top: 0;
  width: 100%;
  height: auto;
}

.toptop {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  font-size: 150%;
  color: white;
  word-spacing: -5rpx;
}

.tabs{
  /* border-top: 1rpx solid orangered; */
  width:100%;
  background-color:white;
  /* padding-top:10rpx; */
  padding-bottom: 20rpx;
  position: fixed;
  z-index: 500;
}
.tabs_container{
  margin:5rpx 10rpx;
  border:5rpx solid #E9837F;
  border-radius: 50rpx;
  overflow: hidden;
  height:80rpx;
  display: flex;
  font-size: 30rpx;
}
.tabs_item{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.active{
  color:white;
  background-color: #E9837F;
  /* border-bottom: 5rpx solid currentColor; */
}


/* 列表卡片 */
/* #E9837F  #ff5c5d */
.activity_status {
  margin-right: 30rpx;
  font-size: 38rpx;
  font-weight: 500;
}

.activityName {
  font-weight: bolder;
  font-size: 38rpx;
  width: auto;
  max-width: 500rpx;
}
.content{
  left : 30rpx !important
}
.director_name{
  font-size: 26rpx;
}
.activityUser_status {
  width: auto;
  color: #E9837F;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  margin-left: 20rpx;
}

.branch {
  background-color: #E9837F;
  color: white;
  padding: 0 10rpx;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  padding-top:5rpx;
  padding-bottom: 5rpx;
  max-width: 320rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  /* max-height:70rpx */
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
}

.time {
  font-size: 25rpx;
  margin-top: 10rpx
}

.time-item {
  display: flex;
  height: 40rpx;
  flex-direction: row;
  align-items: center;
  /* padding-bottom: 20rpx; */
}

.time-item image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 5rpx;
}

.cu-item {
  box-shadow: 0rpx 0rpx 8rpx 1rpx rgb(190, 190, 190);
}

.cu-tag {
  height: 33rpx !important;
  color: #E9837F !important;
  font-size: 20rpx !important;
}

.cu-avatar {
  background-color: white;
  /* color:rgb(255, 157, 0); */
}

.cu-list.menu-avatar>.cu-item .content.flex-sub {
  width: auto !important;
}

.cu-card.dynamic>.cu-item>.text-content {
  padding: 0 30rpx 0;
  max-height: 10.4em;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.cu-list.menu-avatar>.cu-item .content {
  width : auto !important
}

.text-content{
  margin-bottom: 0rpx !important;
}
.padding {
  padding: 0 30rpx 30rpx 30rpx !important;
  /* margin-top : -10rpx */
}