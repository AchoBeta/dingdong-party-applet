/* packageF/pages/a/index.wxss */
page{
  --backIMG: linear-gradient(#ff5c5e, #ff8989);  
  --textBackIMG: linear-gradient(#ffffff, #ff5d5e); 
  background-color: #f1f1f1;
}

.backImg{
  background-image: var(--backIMG);
  color: var(--white);
  height: 50%;
  width: 100%;
  position: absolute;
}

.top2 {
  position: fixed;
  top: 0;
  z-index: 4;
  width: 100%;
  height: 12.3%;
}

.textDiv{
  position: relative;
  color: white;
  width: 92%;
  left: 4%;
}

.textBack{
  position:absolute;
  z-index:1;
  width: 100%;
  height: 100px;
  background-image: var(--textBackIMG);
  border-radius:20rpx;
  opacity: 0.26;
}

.textView{
  padding: 5% 5% 68rpx 5%;
  height: auto;
  display: flex;
  justify-content:center;
  align-items:center
}

.text22{
  color:white;
  text-align: justify;
  font-size:35rpx;
  letter-spacing: 5rpx
}

.fileDiv{
  margin-top: 70rpx;
  width: 100%;
  height: auto;
}

.fileView{
  position:absolute;
  z-index:2;
  margin-top:26rpx;
  width: 100%;
  height: auto;
  background-color: white;
  border-radius: 15rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-shadow:0rpx 10rpx 0rpx rgba(0, 0, 0, 0.03);
}

.fileBackView1{
  position:absolute;
  z-index:1;
  width: 92%;
  left: 4%;
  opacity: 0.3;
  height: 80rpx;
  border-radius: 15rpx;
  margin-top: 12rpx;
  background-color: white;
}

.fileBackView2{
  position:absolute;
  z-index:0;
  width: 86%;
  left: 7%;
  opacity: 0.3;
  height: 80rpx;
  border-radius: 15rpx;
  margin-top: 0rpx;
  background-color: white;
}

.fileViewCell{
  width: 100%;
  color: cyan;
  display: flex;
  align-items: center;
  padding: 5%;
  
}

.fileViewIcon{
  width: 50rpx;
  height: 50rpx;
}

.fileViewText{
  color:#373333;

  margin-left: 30rpx;
  font-size: 35rpx;
}


.nextStep{
  width: 100%;
  position: fixed;
  z-index: 10;
  bottom: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nextStep2{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.nextStepImg{
  width: 300rpx;
  height: 130rpx;
}